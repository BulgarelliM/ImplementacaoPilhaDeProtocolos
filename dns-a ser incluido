require 'resolv'

  puts Resolv.getname '200.131.3.227'
  puts Resolv.getaddresses 'www.cefetmg.br'

#outra maneira - Pesquisa em um txt
class DNS
  #variaveis Globais
  $dominio = 'www.google.com.br'
  $enderecoIP = '127.0.1.1'

  arq = File.open("dns.txt")
  while line = arq.gets
    puts line
    $resultBusca = line
    $split = $resultBusca.split
    puts "#{$split[1]}"
    if ($split[0] === $dominio)
      puts "Opa!Conheco esse endereco!\n"
      $enderecoIPdominio = $split[1]
      break
    elsif ($split[0] != $dominio)
      #puts "Nao conheco o endereco desse dominio! Desculpe!\n"
      $enderecoIPdominio = "Desconhecido por mim\n"
    end
  end
  if($enderecoIPdominio == "Desconhecido por mim\n")
    puts "Nao conheco o endereco desse dominio! Desculpe!\n"
  end
  puts "#{$enderecoIPdominio}"
 arq.close
end
